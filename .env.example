# Telegram
BOT_TOKEN=123456:ABCDEF
ENABLE_BOT=true

# Make integration
# Webhook to Make scenario (OUR -> Make): we POST any incoming user message there
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/xxxxx
# Optional: token for OUR -> Make webhook (if you protect the Make webhook)
MAKE_OUTGOING_BEARER_TOKEN=

# Token for Make -> OUR endpoints (/make/*)
MAKE_BEARER_TOKEN=change_me_make

# Admin-only token (masters management + working hours). Make must NOT have it.
ADMIN_BEARER_TOKEN=change_me_admin

# Public base URL of this service (used to build callback_url in payload)
PUBLIC_BASE_URL=https://your.domain

# Media
MEDIA_ROOT=media
MEDIA_URL_PREFIX=/media

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/barbershop

# Admin bootstrap (comma-separated telegram user ids)
ADMIN_TELEGRAM_IDS=11111111,22222222

# Timezone for displaying and validating working hours (IANA)
TIMEZONE=Europe/Moscow

# Admin web panel (SvelteKit)
ADMIN_PANEL_PASSWORD=change_me_admin_password
# 32+ random chars, used to sign admin cookies
ADMIN_SESSION_SECRET=change_me_admin_session_secret
# if admin and api are on subdomains, set ".example.com" to share cookie
ADMIN_COOKIE_DOMAIN=.example.com
ADMIN_COOKIE_SECURE=true
# comma-separated list of allowed origins for admin frontend
ADMIN_CORS_ORIGINS=https://admin.example.com
